@model TrustTeamVersion4.Models.Domain.Home
@{
	ViewData["Title"] = "Kies uw gewenste data om op te filteren";
	Dictionary<string, List<object>> selections = (Dictionary<string, List<object>>)ViewData["Selections"];
}

<!-- De lijst van zaken waarop kan gefiltert worden.-->
<h3>@ViewData["Title"]</h3>
<h4 class="text-danger">@ViewData["Error"]</h4>
<form class="form-group" method="post">
	<div class=" col-lg-5">
		<label> Ticket Number </label>
		<input asp-for="Number" class="form-control" style="height:34px;" value="" placeholder="-- Ticker Number --">
	</div>
	<div class=" col-lg-5">
		<label> Year </label>
		<input asp-for="Year" class="form-control" style="height:34px;" value="" placeholder="-- Jaartal --">
	</div>
	<div class=" col-lg-5">
		<label> Organization Number </label>
		<input asp-for="OrganizationNumber" class="form-control" style="height:34px;" value="" placeholder="-- Nummer organisatie --">
	</div>
	<div class=" col-lg-5">
		<label> Organization name </label>
		<input asp-for="InvoicCenterOrganization" class="form-control" style="height:34px;" value="" placeholder="-- Naam organisatie --">
	</div>
	<div class=" col-lg-5">
		<label> Group name </label>
		<input asp-for="GroupName" class="form-control" style="height:34px;" value="" placeholder="-- groepnaam --">
	</div>
	<div class=" col-lg-5">
		<label> Person Names </label>
		<input asp-for="PersonName" class="form-control" style="height:34px;" value="" placeholder="-- Persoonsnaam --">
	</div>
	<div class=" col-lg-5">
		<label> Support call types </label>
		<input asp-for="SupportCallType" class="form-control" style="height:34px;" value="" placeholder="-- Type support call --">
	</div>
	<div class=" col-lg-5">
		<label> Support call Priorities </label>
		<input asp-for="SupportCallPriority" class="form-control" style="height:34px;" value="" placeholder="-- Prioriteit support call --">
	</div>
	<div class=" col-lg-5">
		<label> Support call Impacts </label>
		<input asp-for="SupportCallImpact" class="form-control" style="height:34px;" value="" placeholder="-- Impact support call --">
	</div>
	<div class=" col-lg-5">
		<label> Support call Urgencies </label>
		<input asp-for="SupportCallUrgency" class="form-control" style="height:34px;" value="" placeholder="-- Urgentie support call --">
	</div>
	<div class=" col-lg-5">
		<label> Support call statusses </label>
		<input asp-for="SupportCallStatus" class="form-control" style="height:34px;" value="" placeholder="-- Status support call--">
	</div>
	<div class=" col-lg-5">
		<label> Opened by users </label>
		<input asp-for="OpenedByUser" class="form-control" style="height:34px;" value="" placeholder="-- Geopend door --">
	</div>
	<div class=" col-lg-5">
		<label> Assigned to users </label>
		<input asp-for="AssignedToUser" class="form-control" style="height:34px;" value="" placeholder="-- Toegewezen persoon --">
	</div>
	<div class=" col-lg-5">
		<label> Assigned to Queus </label>
		<input asp-for="AssignedToQueue" class="form-control" style="height:34px;" value="" placeholder="-- Toegewezen queue --">
	</div>
	<div class=" col-lg-5">
		<label> Invoice Statusses</label>
		<input asp-for="InvoiceStatus" class="form-control" style="height:34px;" value="" placeholder="-- Status invoice --">
	</div>
	<div style="margin: 5px; margin-bottom: 15px;">
		<label>Datum open begin</label>
		@Html.TextBox("SupportCallOpenDate", null, new { @class = "datefield", type = "date", @id = "date1", onchange = "toggleDate(true)" })
		<label>Datum open eind</label>
		@Html.TextBox("SupportCallOpenDateEinde", null, new { @class = "datefield", type = "date", @id = "date2", disabled = "" })
	</div>
	<b style="margin-top: 10px;">Voorbije maand: </b>@Html.CheckBoxFor(m => m.LastMonth, new { onchange = "toggleDisabled(this.checked)" })
	
	<br />
	<button class="btn btn-primary" type="submit" asp-action="Table" style="margin: 5px;">Filter</button>
	<button asp-action="Graphs" class="btn btn-primary" type="submit" style="margin: 5px;">Graphs & Information</button>
	<a asp-action="Reset" class="btn btn-default" style="margin: 5px;">Reset</a>
</form>


<script>
	function toggleDisabled(_checked) {
		document.getElementById('date1').disabled = _checked ? true : false;
	}
	function toggleDate(_changed) {
		document.getElementById('date2').disabled = _changed ? false : true;

	}
</script>